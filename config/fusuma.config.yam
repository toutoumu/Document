# 上下左右轻扫手势
swipe:
  4:
    # 增加四指上滑动模拟三指上滑 RIGHTMETA+A
    up:
      sendkey: 'RIGHTMETA'
    # 下划显示桌面
    down:
      sendkey: 'RIGHTMETA+D'
    left:
      # 四指左划模拟三指左划
      # sendkey: 'LEFTALT+LEFTCTRL+RIGHT'
      # 前进后退
      sendkey: 'LEFTALT+RIGHT'
    right:
      # 四指右划模拟三指右划
      # sendkey: 'LEFTALT+LEFTCTRL+LEFT'
      # 前进后退
      sendkey: 'LEFTALT+LEFT'

